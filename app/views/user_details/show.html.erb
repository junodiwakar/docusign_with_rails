<div class="container">
  <div class="card mt-5">
    <div class="card-body">
      <h1 class="card-title">User Details</h1>

      <div class="card-text">
        <p><strong>Full Name:</strong> <%= @user.full_name %></p>
        <p><strong>Email:</strong> <%= @user.email %></p>
        <p><strong>Phone Number:</strong> <%= @user.phone_no %></p>
        <p><strong>Address:</strong> <%= @user.address %></p>
      </div>

      <div class="mt-3">
        <%= link_to "Download PDF", url_for(@user.filled_pdf), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
